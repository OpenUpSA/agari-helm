{
  "mappings": {
    "dynamic": "true",
    "dynamic_templates": [
      {
        "ids_as_keywords": {
          "match_mapping_type": "string",
          "match": "*Id",
          "mapping": {
            "type": "keyword",
            "copy_to": ["all_ids"]
          }
        }
      },
      {
        "timestamps": {
          "match_mapping_type": "string",
          "match": "*At",
          "mapping": {
            "type": "date",
            "format": "strict_date_optional_time||epoch_millis||yyyy-MM-dd HH:mm:ss||yyyy-MM-dd"
          }
        }
      },
      {
        "dates": {
          "match_mapping_type": "string",
          "match": "*Date",
          "mapping": {
            "type": "date",
            "format": "strict_date_optional_time||epoch_millis||yyyy-MM-dd HH:mm:ss||yyyy-MM-dd"
          }
        }
      },
      {
        "names_and_descriptions": {
          "match_mapping_type": "string",
          "match": "name|description|title|summary",
          "mapping": {
            "type": "text",
            "analyzer": "standard",
            "fields": {
              "keyword": {
                "type": "keyword",
                "ignore_above": 256
              }
            }
          }
        }
      },
      {
        "types_and_states": {
          "match_mapping_type": "string",
          "match": "*Type|*State|*Status|platform|strategy",
          "mapping": {
            "type": "keyword"
          }
        }
      },
      {
        "file_sizes": {
          "match_mapping_type": "long",
          "match": "*Size|*size",
          "mapping": {
            "type": "long"
          }
        }
      },
      {
        "version_fields": {
          "match_mapping_type": "string",
          "match": "*Version|*version",
          "mapping": {
            "type": "keyword"
          }
        }
      },
      {
        "catch_all_strings": {
          "match_mapping_type": "string",
          "mapping": {
            "type": "text",
            "fields": {
              "keyword": {
                "type": "keyword",
                "ignore_above": 256
              }
            }
          }
        }
      }
    ],
    "properties": {
      "all_ids": {
        "type": "keyword"
      },
      "timestamp": {
        "type": "date",
        "format": "strict_date_optional_time||epoch_millis"
      },
      "source": {
        "type": "keyword"
      },
      "document_type": {
        "type": "keyword"
      }
    }
  },
  "settings": {
    "number_of_shards": 1,
    "number_of_replicas": 1,
    "index": {
      "max_result_window": 50000,
      "mapping": {
        "total_fields": {
          "limit": 2000
        },
        "depth": {
          "limit": 50
        },
        "nested_fields": {
          "limit": 100
        }
      }
    },
    "analysis": {
      "analyzer": {
        "standard_folding": {
          "tokenizer": "standard",
          "filter": ["lowercase", "asciifolding"]
        }
      }
    }
  }
}
