{
  "realm": "agari",
  "enabled": true,
  "displayName": "AGARI Genomics Platform",
  "registrationAllowed": false,
  "registrationEmailAsUsername": false,
  "rememberMe": false,
  "verifyEmail": false,
  "loginWithEmailAllowed": true,
  "duplicateEmailsAllowed": false,
  "resetPasswordAllowed": true,
  "editUsernameAllowed": false,
  "bruteForceProtected": false,
  
  "groups": [
    {
      "name": "data-submitters",
      "path": "/data-submitters"
    },
    {
      "name": "data-viewers",
      "path": "/data-viewers"  
    },
    {
      "name": "admins",
      "path": "/admins"
    }
  ],

  "clients": [
    {
      "clientId": "song-api",
      "name": "Song Metadata API",
      "enabled": true,
      "publicClient": false,
      "secret": "song-secret",
      "directAccessGrantsEnabled": true,
      "serviceAccountsEnabled": true,
      "authorizationServicesEnabled": true,
      "protocol": "openid-connect",
      "standardFlowEnabled": true,
      "implicitFlowEnabled": false,
      "clientAuthenticatorType": "client-secret",
      "defaultClientScopes": ["web-origins", "role_list", "profile", "roles", "email"],
      "optionalClientScopes": ["address", "phone", "offline_access", "microprofile-jwt"],
      "authorizationSettings": {
        "allowRemoteResourceManagement": true,
        "policyEnforcementMode": "ENFORCING",
        "resources": [
          {
            "name": "song",
            "displayName": "Song API Resource",
            "type": "urn:song-api:resources:default",
            "ownerManagedAccess": false,
            "scopes": [
              {
                "name": "READ"
              },
              {
                "name": "WRITE"
              }
            ]
          },
          {
            "name": "STUDY.study1",
            "displayName": "Study 1 Resource", 
            "type": "urn:song-api:resources:study",
            "ownerManagedAccess": false,
            "scopes": [
              {
                "name": "READ"
              },
              {
                "name": "WRITE"
              }
            ]
          }
        ],
        "policies": [
          {
            "name": "data-submitters-policy",
            "description": "Policy for data submitters group",
            "type": "group",
            "logic": "POSITIVE",
            "decisionStrategy": "UNANIMOUS",
            "config": {
              "groups": "[{\"path\":\"/data-submitters\",\"extendChildren\":false}]"
            }
          },
          {
            "name": "data-viewers-policy", 
            "description": "Policy for data viewers group",
            "type": "group",
            "logic": "POSITIVE",
            "decisionStrategy": "UNANIMOUS",
            "config": {
              "groups": "[{\"id\":\"data-viewers\",\"extendChildren\":false}]"
            }
          },
          {
            "name": "admins-policy",
            "description": "Policy for admin users",
            "type": "group", 
            "logic": "POSITIVE",
            "decisionStrategy": "UNANIMOUS",
            "config": {
              "groups": "[{\"id\":\"admins\",\"extendChildren\":false}]"
            }
          },
          {
            "name": "song-read-permission",
            "description": "Permission for reading song resources",
            "type": "resource",
            "logic": "POSITIVE",
            "decisionStrategy": "AFFIRMATIVE",
            "config": {
              "resources": "[\"song\"]",
              "scopes": "[\"READ\"]",
              "applyPolicies": "[\"data-viewers-policy\",\"data-submitters-policy\",\"admins-policy\"]"
            }
          },
          {
            "name": "song-write-permission",
            "description": "Permission for writing song resources", 
            "type": "resource",
            "logic": "POSITIVE",
            "decisionStrategy": "AFFIRMATIVE",
            "config": {
              "resources": "[\"song\"]",
              "scopes": "[\"WRITE\"]",
              "applyPolicies": "[\"data-submitters-policy\",\"admins-policy\"]"
            }
          },
          {
            "name": "study1-read-permission",
            "description": "Permission for reading study1 resources",
            "type": "resource",
            "logic": "POSITIVE", 
            "decisionStrategy": "AFFIRMATIVE",
            "config": {
              "resources": "[\"STUDY.study1\"]",
              "scopes": "[\"READ\"]",
              "applyPolicies": "[\"data-viewers-policy\",\"data-submitters-policy\",\"admins-policy\"]"
            }
          },
          {
            "name": "study1-write-permission",
            "description": "Permission for writing study1 resources",
            "type": "resource",
            "logic": "POSITIVE",
            "decisionStrategy": "AFFIRMATIVE", 
            "config": {
              "resources": "[\"STUDY.study1\"]",
              "scopes": "[\"WRITE\"]",
              "applyPolicies": "[\"data-submitters-policy\",\"admins-policy\"]"
            }
          }
        ],
        "scopes": [
          {
            "name": "READ",
            "displayName": "Read Access"
          },
          {
            "name": "WRITE", 
            "displayName": "Write Access"
          }
        ]
      }
    },
    {
      "clientId": "score-api",
      "name": "Score File API", 
      "enabled": true,
      "publicClient": false,
      "secret": "score-secret",
      "directAccessGrantsEnabled": true,
      "serviceAccountsEnabled": true,
      "authorizationServicesEnabled": true,
      "protocol": "openid-connect",
      "standardFlowEnabled": true,
      "implicitFlowEnabled": false,
      "clientAuthenticatorType": "client-secret",
      "defaultClientScopes": ["web-origins", "role_list", "profile", "roles", "email"],
      "optionalClientScopes": ["address", "phone", "offline_access", "microprofile-jwt"]
    }
  ],

  "users": [
    {
      "username": "admin",
      "enabled": true,
      "email": "admin@agari.org",
      "firstName": "Admin",
      "lastName": "User",
      "credentials": [
        {
          "type": "password",
          "value": "admin123",
          "temporary": false
        }
      ],
      "realmRoles": ["admin"],
      "clientRoles": {
        "account": ["manage-account"]
      },
      "groups": ["admins"]
    },
    {
      "username": "submitter",
      "enabled": true,
      "email": "submitter@agari.org", 
      "firstName": "Data",
      "lastName": "Submitter",
      "credentials": [
        {
          "type": "password",
          "value": "submitter123",
          "temporary": false
        }
      ],
      "realmRoles": ["contributor"],
      "clientRoles": {
        "account": ["manage-account"]
      },
      "groups": ["data-submitters"]
    },
    {
      "username": "viewer",
      "enabled": true,
      "email": "viewer@agari.org",
      "firstName": "Data", 
      "lastName": "Viewer",
      "credentials": [
        {
          "type": "password",
          "value": "viewer123",
          "temporary": false
        }
      ],
      "realmRoles": ["viewer"],
      "clientRoles": {
        "account": ["manage-account"]
      },
      "groups": ["data-viewers"]
    }
  ],

  "roles": {
    "realm": [
      {
        "name": "owner",
        "description": "Organization owner with full permissions"
      },
      {
        "name": "organisation-admin",
        "description": "Organization admin with member management permissions"
      },
      {
        "name": "admin", 
        "description": "Project admin with project management permissions"
      },
      {
        "name": "organisation-contributor",
        "description": "Organization-wide contributor access to all projects"
      },
      {
        "name": "contributor",
        "description": "Project-specific contributor with data submission permissions"
      },
      {
        "name": "organisation-viewer",
        "description": "Organization-wide viewer access to all projects"
      },
      {
        "name": "viewer",
        "description": "Project-specific viewer with read-only access"
      }
    ]
  }
}
